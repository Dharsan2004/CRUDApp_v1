<div class="container" style="margin:20px">




<% @articles.each do |article| %>
  
  <div class="card" style="width: 18rem;">

    <div class="card-body">
      <h5 class="card-title"><%= article.BookName %></h5>
      <p class="card-text"><%= article.Author %></p>
      <%= link_to "Edit" , "/article/#{article.id}/edit" , data:{ turbo_method: :get } %>
      <%= link_to "Show" , article_path(article.id) , data:{ turbo_method: :get } %>
      <%= link_to "Delete" , article_path(article.id) , data:{ turbo_method: :delete } %>
      <br>
    </div>
  </div>
    
<% end %>
</div>

