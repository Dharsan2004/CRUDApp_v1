<h1>List of Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <h3><%= article.BookName %></h2>
      <p><%= article.Author %></p>

      <p> <%= link_to "Edit" , "/article/#{article.id}/edit" , data:{ turbo_method: :get } %> </p>
      <p> <%= link_to "Show" , article_path(article.id) , data:{ turbo_method: :get } %> </p>
      <p> <%= link_to "Delete" , article_path(article.id) , data:{ turbo_method: :delete } %> </p>
    </li>
  <% end %>
</ul>