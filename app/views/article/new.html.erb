<h1>Enter the Book details</h1>
<br>

<%= form_with url: url_for(action: 'create', controller: 'article'), method: :post, local: true do |f| %> 
    <p> 
    <%= f.label :BookName %><br/> 
    <%= f.text_field :bookName %>
  </p>
  <p>
    <%= f.label :AuthorName %><br/> 
    <%= f.text_area :authorName %> 
  </p>
  <p>
    <%= f.submit %> 
  </p>
<% end %>
