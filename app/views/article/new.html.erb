

<h1>Enter the Book details</h1>
<br>


<% if @article.errors.any? %> 
  <h2>The following errors prevented the article from being saved</h2> 
  <ul> 
    <% @article.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
    <% end %> 
  </ul>
<% end %>



<%= form_with url: url_for(action: 'create', controller: 'article'), method: :post, local: true do |f| %> 
    <p> 
    <%= f.label :BookName %><br/> 
    <%= f.text_field :bookName %>
  </p>
  <p>
    <%= f.label :AuthorName %><br/> 
    <%= f.text_area :authorName %> 
  </p>
  <p>
    <%= f.submit %> 
  </p>
<% end %>
